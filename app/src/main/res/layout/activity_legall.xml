<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".donoma">

    <ImageView
        android:id="@+id/donoma_pg"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_tondOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/foto_legall"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-32dp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="LEGALL Discoteca-Porto San Giorgio"
        android:textSize="26dp"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donoma_pg"
        tools:ignore="MissingConstraints" />

    <ScrollView
        android:layout_width="433dp"
        android:layout_height="462dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Il Le Gall ha un’unico ambiente musicale e solitamente è frequentato da una clientela adulta e molto selezionata.Spesso il Le Gall Club viene erroneamente ricercato nei motori di internet come discoteca Legal, discoteca Legalle, Le Gal Club, discoteca Legall o Le Galle Club.Curatissimo, selezionatissimo e ottimo servizio, questi sono i segreti di un club come il Le Gall che non ha mai sentito grandi periodi di crisi.Il Le Gall Club è divisa in 2 aree, la zona estiva e quella invernale:La zona aperta in estate è quella più grande.Le particolarità di luci e colori sempre estremamente chic e la possibilità di ballare a due passi da spiaggia e mare a fare da cornice al locale tra i più in voga delle Marche.Molto affascinante è la veduta della parte estiva dal ristorante situato al piano superiore.La zona invernale è molto più piccola.In quel periodo infatti, il Le Gall è un vero e proprio club. Locale di piccole dimensioni, molto selezionato e curato nei minimi particolari.
Da sottolineare la bellezza della discoteca Le Gall, del personale e la qualità sia musicale che del ristorante.. tutto veramente di alto livello.       ."
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="300dp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:text="Visita la nostra pagina:"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <Button
                android:id="@+id/button4"
                android:layout_width="88dp"
                android:layout_height="36dp"
                android:layout_marginTop="28dp"
                android:text="VAI"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.165"
                app:layout_constraintStart_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="28dp"
                android:text="Contatti:"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_marker_position"
                android:text="Lungomare Antonio Gramsci 2"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:drawableStart="@drawable/ic_phone"
                android:text="0734 551000"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:drawableStart="@drawable/ic_mail"
                android:text="info@legall.it"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                tools:context=".MapsFragment" />

        </androidx.constraintlayout.widget.ConstraintLayout>







    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



